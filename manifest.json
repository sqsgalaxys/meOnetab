{
    "name": "onetabEx",
    "description": "onetabEx",
    "version": "2.0",
    "permissions": [
        "activeTab",
        "tabs",
        "activeTab",
        "all_urls",
        "downloads",
        "tabs",
        "browsingData" 
    ],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "browser_action": {
        "default_title": "onetabEx"
    },
    "manifest_version": 2,

    "commands": {
        "close-download-bar": {
            "description": "__MSG_closeHotkey__",
            "suggested_key": {
                "default": "Alt+J",
                "mac": "Alt+J"
            }
        }
    }
}

