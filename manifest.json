{
    "name": "onetabEx",
    "description": "onetabEx",
    "version": "2.0",
    "permissions": [
        "activeTab",
        "all_urls",
        "browsingData",
        "contextMenus",
        "downloads",
        "pageCapture",
        "storage" ,
        "tabs",
        "webNavigation",
        "webRequestBlocking"
    ],
    "content_scripts": [{
        "js": ["mhtmlxs.js"],
        "matches": ["*://*/*.mhtmlxs", "file://*/*.mhtmlxs"],
        "run_at": "document_end"
    }],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "browser_action": {
        "default_title": "onetabEx"
    },
    "manifest_version": 2,

    "commands": {
        "close-download-bar": {
            "description": "__MSG_closeHotkey__",
            "suggested_key": {
                "default": "Alt+J",
                "mac": "Alt+J"
            }
        }
    }
}

